CREATE TABLE users(
    uid serial PRIMARY KEY,
    uname varchar(30) NOT NULL,
    email varchar(100) UNIQUE NOT NULL,
    usertype varchar(10) NOT NULL
);

CREATE TABLE userdetails(
    id serial PRIMARY KEY,
    uid int UNIQUE NOT NULL,
    university varchar(100) NOT NULL,
    std varchar(10) NOT NULL,
    board varchar(10) NOT NULL,
    address varchar(100) NOT NULL,
    fathersName varchar(30) NOT NULL,
    mothersName varchar(30 ) NOT NULL,
    contact bigint NOT NULL,
    fathersContact bigint NOT NULL,
    mothersContact bigint NOT NULL
);

CREATE TABLE userpass(
    pid serial PRIMARY KEY,
    email varchar(100) UNIQUE NOT NULL,
    pass varchar(100) NOT NULL
);

CREATE TABLE userpayments(
    payid serial PRIMARY KEY,
    uid integer NOT NULL,
    date timestamp NOT NULL,
    for_month varchar(3) NOT NULL,
    pay_value money NOT NULL
);


SELECT * FROM userpass;

